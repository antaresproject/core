{% if control.hasWrapper %}
    <div {{ control.getWrapper|stringify }} >
{% endif %}
    <div {{ control.getLabelWrapper()|stringify }}>
        {{ label|raw }}
    </div>
    <div {{ control.getInputWrapper()|stringify }}>
        <div class="input-field">
            {{ control.prependHtml|raw }}
            {{ input|raw }}
            {{ control.appendHtml|raw }}
        </div>
    </div>
    {% if control.inlineHelp|length>1 or control.help|length>1 %}
        {% include 'antares/foundation::layouts.antares.partials.form.vertical._description' %}
    {% endif %}
    {% if errors != null %}
    <span id="{{ control.id }}_error" class="error col-dt-14 col-13 col-mb-11">
        {% for error in errors %}
            {{ error }}
        {% endfor %}
    </span>
    {% endif %}

{% if control.hasWrapper %}
    </div>
{% endif %}