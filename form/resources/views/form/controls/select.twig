<select name="{{ control.getName() }}" {{ control.getAttributes()|stringify }}>
    {% if control.hasEmptyValue() %}
        <option>{{ control.getEmptyValue() }}</option>
    {% endif %}
    {% for key, name in control.getValueOptions() %}
        <option value="{{ key }}"
            {% if control.getValue() is iterable and key in control.getValue() %}
                selected
            {% elseif control.getValue() == key %}
                selected
            {% endif %}
        >
            {{ name }}
        </option>
    {% endfor %}
</select>