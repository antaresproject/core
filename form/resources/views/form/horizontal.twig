<div class="form-block">
    <div class="col-dt-2 col-2 col-mb-2">
        {{ label|raw }}
    </div>
    {% if control.hasWrapper %}
    <div {{ control.getWrapper|stringify }} >
        {% endif %}
        <div class="col-dt-6 col-6 col-mb-6 {{ control.getWrapper()['class'] }}">
            <div class="input-field">
                {{ control.prependHtml|raw }}
                {{ input|raw }}
                {{ control.appendHtml|raw }}
            </div>
            {% if errors != null %}
                <span id="{{ control.id }}_error" class="error col-13 col-mb-11">
                {% for error in errors %}
                    {{ error }}
                {% endfor %}
            </span>
            {% endif %}
        </div>
        {% if control.hasWrapper %}
    </div>
    {% endif %}
</div>