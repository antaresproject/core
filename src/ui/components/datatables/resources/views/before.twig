<div class="card-ctrls tab-search tab-search--filter swiper--no-slides only-search {{ massActions|length>0 ? 'with-mass-actions-container' : '' }}">

    <div class="card-ctrls__left">
        {% if selects %}
            {{ selects|raw }}
        {% endif %}
        {% if searchable %}
            <div class="search-box search-box--dark">
                <i class="zmdi zmdi-search"></i>
                <form action="">
                    <div class="mdl-js-textfield mdl-textfield search-box__mdl-textfield">
                        <input class="mdl-textfield__input search-box__search-field" type="text" id="tableSearch" autocomplete="off" value="{{ search|escape('html') }}">
                        <label class="mdl-textfield__label" for="tableSearch">Search</label>
                    </div>
                </form>
            </div>
        {% endif %}        
    </div>
    {% if datatables_top_center %}
        {{ datatables_top_center|raw }}
    {% endif %}
    <div class="card-ctrls__right">
        {% if rightCtrls %}
            {{ rightCtrls|raw }}
        {% endif %}
        {% if columnFilter %}
            {{ columnFilter|raw }}
        {% endif %}
        <div class="filters" id="filter-save-url" data-url="{{ handles('antares/foundation::datatables/filters/save') }}">
            {% if filters %}
                {{ filters|raw }}
            {% endif %}
        </div>
        {% if massActions|length>0 %}
            <div class="ddown ddown--left ddown--disabled btn-selected mass-actions-container {{ massActions|length>0 ? '' : 'mass-actions-disabled' }}">
                <div class="ddown__init btn--dropdown btn btn--capitalize btn--md btn--primary mdl-js-button ml8 btn-with-selected" id="table-ma" disabled>
                    <span>{{ trans('antares/foundation::label.with_selected') }}</span>
                </div>
                <div class="ddown__content">

                    <ul class="ddown__menu">
                        {% for massAction in massActions %}
                            <li>
                                {{ massAction.get()|raw }}
                            </li>
                        {% endfor %}
                    </ul>

                </div>
            </div>
        {% endif %}
    </div>                                    
</div>