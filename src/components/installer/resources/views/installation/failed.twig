{% extends "antares/foundation::layouts.installer.main" %}
{% block app_wrapper %}
    <div id="app-wrapper" class="app-install__step-3">
        <div class="app-content">                
            <section class="main-content nopadding">
                <div class="grid-container grid-container--2col grid-container--no-padd {{grid_container_class}}">                       
                    <div class="grid-col grid-col--menu">                            
                        <div class="menu-aside-container">
                            {% include 'antares/installer::partials._menu' with {'active': 5} %}    
                        </div>
                    </div>
                    <div class="grid-col grid-col--container">
                        {{ set_meta('header::class', 'main-header') }}                        
                        {% include 'antares/foundation::components.messages' %}                            
                        {% block content %}       
                            <div class="col-group">
                                <div class="col-16">
                                    <h1>{{ trans('Installation failed') }} :(</h1>
                                </div>
                                <div class="col-16">
                                    <span>{{ trans('Platform has not been installed.') }}</span>

                                    {% if(additionalMessage) %}
                                        <br>
                                        <br>
                                        {{ additionalMessage }}
                                    {% endif %}

                                    <br/>
                                    <br/>
                                    <br/>

                                    <a href="{{ handles('antares/foundation::install') }}" class="btn btn--red mdl-button mdl-js-button mdl-js-ripple-effect" >
                                        {{ trans('Again') }} <i class="zmdi zmdi-refresh"></i>
                                    </a>
                                </div>
                            </div>
                        {% endblock %}

                    </div>
                </div>
            </section>
        </div>
    </div>  
{% endblock %}