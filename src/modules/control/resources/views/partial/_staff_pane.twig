{% set menu=app('antares.widget').make('menu.control.staff.pane') %}
<ul class="menu-aside">
    {% for item in menu %}
        <li {{ item.active ? 'class="is-active"' : '' }} >
            <a href="{{ item.link }}" class="mdl-js-button mdl-js-ripple-effect">
                <i class="zmdi {{ item.icon }}"></i>
                <span>
                    {{ item.title }}
                </span>
            </a>
            {% if item.childs is not empty  %}
                <ul class="menu-settings__submenu">
                    {% for child in item.childs %}
                        <li {{ child.isActive()?'class="is-active"':'' }}>
                            <a href="{{ child.link}}" class="mdl-js-button mdl-js-ripple-effect">
                                <i class="zmdi {{ item.icon }}"></i>
                                <span>
                                    {{ child.prepend | raw}} {{ child.title}}
                                </span>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </li>
    {% endfor %}
</ul>
